@model Product 
<div class="card card-outline-primary m-1 p-1 text-center" style="width:30%;float:left; height: 530px">
    <div class="bg-faded p-1">
        <img src="@Model.Img" class="text-center" height="270" width="270" style="text-align:center"/>
        <h4 class="text-center">
            @Model.Name<br/>
        </h4>
    </div>

    <form method="post" asp-page="/Cart" id="@Model.ProductId">
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <div class="mt-3 text-center" style="height:50px;">
            <span class="card-text p-2">
                @Model.Description<br />
            </span>
        </div>

        <div class="mt-3">
            <span class="badge badge-pill badge-primary p-2" style="font-weight:bold; font-size:16px; line-height:1.5;">@Model.Price.ToString("c")</span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success btn-sm p-2">
                Add To Cart
            </button>
        </div>

    </form>
</div>